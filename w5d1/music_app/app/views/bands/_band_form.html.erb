<form action="<%= action %>" method="post">
  <%= auth_token %>
  <% if band.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="band_name">What is the Band's name?</label>
  <input id="band_name" type="text" name="band[name]" value="<%= band.name %>">
  <input type="submit" value="<%= button_val %>">
  <%= render 'shared/errors' %>
</form>
